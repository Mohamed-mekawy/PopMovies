
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.mekawy.popmovies.Movie_Fragment"
        >

        <TextView
            android:id="@+id/detail.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_Green"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/movie_text_size"
            android:textStyle="bold"
            android:text="No Movie Selected"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical"
            >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="20dp"
                >

                    <ImageView
                        android:id="@+id/detail.thumb_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/detail.date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="@dimen/abc_text_size_headline_material"
                        android:layout_gravity="center_horizontal"
                        />


                    <TextView
                        android:id="@+id/detail.rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:layout_gravity="center_horizontal"
                        />


                    <ImageView
                        android:id="@+id/Movie_fav_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/favoff"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/Movie_fav_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap - Add to Favorite List"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/detail.desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textColor="#000000"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>
    </ScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ListView
                android:id="@+id/Trailer_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
            </ListView>

        </LinearLayout>

        </LinearLayout>



        </LinearLayout>






