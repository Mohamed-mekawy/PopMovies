
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.mekawy.popmovies.Movie_ActivityFragment"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="vertical"
            android:padding="@dimen/Grid_padding_val"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#009688"
        >

    <TextView
        android:id="@+id/detail.title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/movie_text_size"
        android:textStyle="bold"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="2"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

        <ImageView
            android:id="@+id/detail.thumb_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/detail.date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:layout_gravity="center_horizontal"
            />


            <TextView
                android:id="@+id/detail.rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/detail.desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_headline_material"
        />

        </LinearLayout>

    </ScrollView>
